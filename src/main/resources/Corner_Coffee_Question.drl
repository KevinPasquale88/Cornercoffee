rule "bitter yes"
	salience 50
	when
		$answer:AnswerPOJO(question == "Bevi il caffè amaro", answer == "Si")
		$coffee:CoffeeType($bi : bitter)
	then
		modify($coffee){
			bitter = $bi + 15;
		}
		retract($answer);
		coffeeChoose.moreArabica(10);
end

