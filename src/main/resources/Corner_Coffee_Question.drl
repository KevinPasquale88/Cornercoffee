global it.icon.cornercoffe.pojo.CoffeeChoose coffeeChoose;  

rule "Rules Giava"
	salience 5
	when $coffee:CoffeeType(body >= 50 , bitter >= 50,  acidity < 50, aroma <= 50, sweetness <= 50)
	then coffeeChoose.setCoffee("Giava");
end

