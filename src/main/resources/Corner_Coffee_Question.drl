rule "bitter yes"
	salience 10
	when
		$answer:AnswerPOJO(question == "Bevi il caffè amaro", answer == "Si")
		$coffee:CoffeeType($bi : bitter, $sw : sweetness)
	then
		modify($coffee){
			bitter = $bi + 30;
		}
end

rule "bitter no"
	salience 10
	when
		$answer:AnswerPOJO(question == "Bevi il caffè amaro", answer == "No")
		$coffee:CoffeeType($bi : bitter)
	then 
		modify($coffee){
			bitter = $bi + 50;
		}
end

